--case statement 

select firstname, lastname, age, 
case
	when age > 30 then 'Old'
	else 'Young'
end
from SQL_practice.dbo.employeedemorgraphics
where age is not null
order by age 

  --CASE AND WHEN 
select firstname, lastname, age, 
case
	when age > 30 then 'Old'
	when age between 27 and 30 then 'Young'
	else 'Baby'
end
from SQL_practice.dbo.employeedemorgraphics
where age is not null
order by age 
